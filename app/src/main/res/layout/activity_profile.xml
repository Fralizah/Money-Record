<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_20sdp"
    android:paddingHorizontal="@dimen/_8sdp"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/edit_avatar"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ci_profile"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/dummy_image"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="@color/darkCornflowerBlue"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:backgroundTint="@color/neutral">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_update"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="@dimen/_2sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@color/neutral" />

        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_profile"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTint="@color/darkElectricBlue"
                android:text="Username"
                android:textSize="12dp"
                android:fontFamily="@font/inter_w700"
                android:textColor="@color/font4"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTint="@color/darkElectricBlue"
                android:text="fjejes.12@gmail.com"
                android:textSize="12dp"
                android:fontFamily="@font/inter_w700"
                android:textColor="@color/font4"
                android:textStyle="bold"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:text="all time transaction"
        android:textSize="15dp"
        android:fontFamily="@font/inter_w700"
        android:textColor="@color/font4"
        android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/font1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="Net Amount"
                android:textSize="12dp"
                android:fontFamily="@font/inter_w700"
                android:textColor="@color/font4"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_netAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Rp 300.000"
                android:textSize="25dp"
                android:fontFamily="@font/inter_w700"
                android:textColor="@color/font1"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="@dimen/_272sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textSize="12dp"
                        android:fontFamily="@font/inter_w700"
                        android:textColor="@color/font4"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Rp 300.000"
                        android:textSize="15dp"
                        android:fontFamily="@font/inter_w700"
                        android:textColor="@color/font1"
                        android:textStyle="bold"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textSize="12dp"
                        android:fontFamily="@font/inter_w700"
                        android:textColor="@color/font4"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Rp 300.000"
                        android:textSize="15dp"
                        android:fontFamily="@font/inter_w700"
                        android:textColor="@color/font1"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:text="Net Amount"
        android:textSize="12dp"
        android:fontFamily="@font/inter_w700"
        android:textColor="@color/font4"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_netamountThisMount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:text="Rp 300.000"
        android:textSize="25dp"
        android:fontFamily="@font/inter_w700"
        android:textColor="@color/font1"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:textSize="16dp"
            android:fontFamily="@font/inter_w700"
            android:textColor="@color/font4"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textSize="16dp"
            android:fontFamily="@font/inter_w700"
            android:textColor="@color/font4"
            android:textStyle="bold"/>

    </LinearLayout>
    
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bc_transaksi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>