<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:paddingHorizontal="@dimen/_31sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/coba"
        android:layout_marginTop="@dimen/_68sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="Create
                          an account"
        android:fontFamily="@font/inter_w700"
        android:textColor="@color/font1"
        android:textSize="40dp"/>

    <TextView
        android:layout_marginTop="@dimen/_64sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/font1"
        android:fontFamily="@font/inter_w600"
        android:textSize="16dp"/>

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/tf_username"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/font1"
        android:fontFamily="@font/inter_w600"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/tf_email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/font1"
        android:fontFamily="@font/inter_w600"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/tf_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_marginTop="@dimen/_80sdp"
        android:text="Sign Up"
        android:textSize="20dp"
        android:fontFamily="@font/inter_w700"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_40sdp"
        app:backgroundTint="@color/darkCornflowerBlue"
        app:cornerRadius="@dimen/_20sdp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?  "
            android:textColor="@color/darkCornflowerBlue"
            android:fontFamily="@font/inter_w600"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="@color/darkCornflowerBlue"
            android:fontFamily="@font/inter_w800"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>