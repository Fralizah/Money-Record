<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/_31sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/_68sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:fontFamily="@font/inter_w700"
            android:textColor="@color/font1"
            android:textSize="40dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/font1"
            android:fontFamily="@font/inter_w600"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tf_email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/font1"
            android:fontFamily="@font/inter_w600"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tf_password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_marginTop="@dimen/_60sdp"
            android:text="Login"
            android:textSize="20dp"
            android:fontFamily="@font/inter_w700"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_40sdp"
            android:backgroundTint="@color/font1"
            app:cornerRadius="@dimen/_20sdp"/>


        <LinearLayout
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new account?  "
                android:textColor="@color/font1"
                android:fontFamily="@font/inter_w600"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/font1"
                android:fontFamily="@font/inter_w800"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>