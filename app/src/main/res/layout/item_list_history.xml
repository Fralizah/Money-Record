<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        app:strokeWidth="0dp"
        android:backgroundTint="@color/font5"
        android:outlineSpotShadowColor="@color/transparan"
        app:cardCornerRadius="@dimen/_20sdp"
        android:id="@+id/cv_history"
        style="@style/Button.OutlineBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_88sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Jajan"
                android:textSize="25dp"
                android:textColor="@color/font1"
                android:fontFamily="@font/inter_w800"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="@dimen/_148sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/12/2022"
                    android:textSize="13dp"
                    android:textColor="@color/bg1"
                    android:fontFamily="@font/inter_w600"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Rp 30.000"
                    android:textSize="18dp"
                    android:textColor="@color/font2"
                    android:fontFamily="@font/inter_w800"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_update"
            android:src="@drawable/ic_edit3"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:clickable="true"/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>