<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobileApps.projekAkhir.kelompokSatu">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>

    <application
        android:name=".util.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAplikasiFransisca"
        tools:targetApi="31">

        <receiver
            android:name=".ui.component.Notification"
            android:enabled="true"/>

        <activity
            android:name=".ui.pages.dasboard.profile.pages.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.dasboard.detailtransaksi.pages.DetailTransaksiActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.dasboard.edittransaksi.pages.EditTransaksiActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.dasboard.inputtransaksi.pages.InputTransaksiActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.dasboard.dasboard.pages.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.auth.pages.signup.pages.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.auth.pages.signin.pages.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.PortalActivity"
            android:exported="false"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar" />
        <activity
            android:name=".ui.pages.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MyAplikasiFransisca.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>